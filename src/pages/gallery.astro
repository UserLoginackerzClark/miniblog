---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Gallery">
  <main class="prose mx-auto my-10 text-center">
    <h1 class="text-3xl font-bold mb-8">Gallery</h1>

    <div class="grid grid-cols-1 sm:grid-cols-2 md:grid-cols-3 gap-6">
      <img
        src="/images/Polar-Bear-Snowy-Art.webp"
        alt="Polar Bear Snowy Art"
        class="rounded-2xl shadow-md transition-transform duration-300 hover:scale-105"
      />
    </div>
  </main>
</Layout>

