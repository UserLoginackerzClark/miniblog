---
import Layout from "../layouts/Layout.astro";
import { Image } from "astro:assets";

import bearRoar from "../../images/bear-roar-art.webp";
import grizzlyFalls from "../../images/grizzly-bear-water-falls-art.webp";
import polarBear from "../../images/polar-bear-snowy-art.webp";
import blackWidow from "../../images/black-widow-spider-art.webp";
---

<Layout 
  title=" sandrogia.com"
  description="Paintings are created with Acrylic on Canvas, and include Free delivery."
>
  <main class="px-4 py-10 text-center">
    <h1 class="text-4xl font-bold mb-6">Buy Art</h1>

    <p class="text-lg text-gray-700 dark:text-gray-300">
      To purchase artwork, email me:  art@sandrogia.com
    </p>

    <!-- Artwork Grid -->
    <section class="mt-10 grid grid-cols-1 sm:grid-cols-2 lg:grid-cols-2 gap-8 justify-items-center">
      <figure class="rounded-2xl shadow-lg p-3 bg-white dark:bg-gray-800 transition-transform duration-300 hover:scale-105">
        <Image src={bearRoar} alt="Bear Roar Original wildlife art" width={400} height={300} />
        <figcaption class="italic text-sm mt-2">"Bear Roar" - Original wildlife art</figcaption>
      </figure>

      <figure class="rounded-2xl shadow-lg p-3 bg-white dark:bg-gray-800 transition-transform duration-300 hover:scale-105">
        <Image src={grizzlyFalls} alt="Grizzly Falls - Nature inspired piece" width={400} height={300} />
        <figcaption class="italic text-sm mt-2">"Grizzly Falls" - Nature inspired</figcaption>
      </figure>

      <figure class="rounded-2xl shadow-lg p-3 bg-white dark:bg-gray-800 transition-transform duration-300 hover:scale-105">
        <Image src={polarBear} alt="Polar Bear in Snow - Arctic Wildlife Series" width={400} height={300} />
        <figcaption class="italic text-sm mt-2">"Polar Bear in SnowStorm" - Arctic Wildlife</figcaption>
      </figure>

      <figure class="rounded-2xl shadow-lg p-3 bg-white dark:bg-gray-800 transition-transform duration-300 hover:scale-105">
        <Image src={blackWidow} alt="Black Widow - Insect Portrait Series" width={400} height={300} />
        <figcaption class="italic text-sm mt-2">"Black Widow" - Insect Portrait Series</figcaption>
      </figure>
    </section>
  </main>
</Layout>

