---
import BaseLayout from "../../layouts/BaseLayout.astro";

const product = {
  name: "Original Bear Portrait Painting – Acrylic on Canvas",
  description: "“Anger Management” is an original fine art painting capturing the raw, primal energy of a roaring bear against a cosmic backdrop. Hand-painted in acrylics on wood panel, this one-of-a-kind wildlife artwork blends realism with a surreal background. Perfect for collectors of nature, wildlife, or contemporary art. Signed by the artist Sandro Gia.",
  image: [
    "/images/bear-roar-art.webp"
  ],
  price: "250.00",
  salePrice: "175.00",
  currency: "USD",
  sku: "gla_440",
  condition: "https://schema.org/NewCondition",
  availability: "https://schema.org/InStock",
  brand: "Sandrogia Art",
  url: "https://sandrogia.com/buy-art/original-bear-portrait",
  size: "14 × 16 in",
  material: "Acrylic on Wood Panel"
};
---

<BaseLayout title={product.name} description={product.description}>
  <section class="mx-auto max-w-3xl p-6">
    <h1 class="text-3xl font-bold mb-4">{product.name}</h1>

    <div class="flex flex-col gap-4">
      {product.image.map((img) => (
        <img src={img} alt={product.name} class="rounded-2xl shadow" loading="lazy" />
      ))}
    </div>

    <p class="mt-4 text-lg">{product.description}</p>

    <p class="font-semibold text-xl mt-6">
      <span class="line-through text-gray-500">${product.price}</span>
      <span class="ml-2 text-green-700">${product.salePrice} USD</span>
    </p>

    <p class="mt-2 text-sm text-gray-600">
      Size: {product.size} | Material: {product.material}
    </p>

    <a
      href="mailto:info@sandrogia.com?subject=Purchase%20Request%20-%20Bear%20Portrait%20Painting"
      class="inline-block bg-black text-white px-4 py-2 mt-6 rounded-xl"
    >
      Inquire or Purchase
    </a>
  </section>

  <!-- SEO + Google Merchant structured data -->
  <script type="application/ld+json">
    {JSON.stringify({
      "@context": "https://schema.org/",
      "@type": "Product",
      name: product.name,
      image: product.image.map((img) => `https://sandrogia.com${img}`),
      description: product.description,
      brand: { "@type": "Brand", name: product.brand },
      sku: product.sku,
      offers: {
        "@type": "Offer",
        url: product.url,
        priceCurrency: product.currency,
        price: product.salePrice,
        priceValidUntil: "2026-12-31",
        itemCondition: product.condition,
        availability: product.availability
      }
    })}
  </script>
</BaseLayout>

