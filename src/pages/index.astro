---
import Layout from "../layouts/Layout.astro";
---

<Layout title="Home | sandrogia.com">
  <main class="px-4 py-10 text-center">
    <h1 class="text-4xl font-bold mb-4">Sandrogia</h1>

    <!-- Removed the navigation / links section -->

    <p class="text-lg text-gray-700 dark:text-gray-300">
      Artist of Planet Earth
    </p>

    <p class="mt-2 text-lg text-gray-700 dark:text-gray-300">
      Concepts heavily inspired by <span class="text-blue-600 dark:text-blue-400 font-semibold">Nature</span>.
    </p>

    <!-- Black Widow Spider Artwork -->
    <section class="mt-10 text-center">
      <img
        src="/images/black-widow-spider-art.webp"
        alt="Black widow spider artwork illustration"
        class="mx-auto rounded-2xl shadow-lg"
        width="600"
        height="400"
        loading="lazy"
      />
      <p class="mt-3 text-sm text-gray-500 italic">
        “Black Widow Spider” Insect Artwork
      </p>
    </section>
  </main>
</Layout>

